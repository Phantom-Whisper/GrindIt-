<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GrindIt_.Components.StepsCard">
    <Border
        WidthRequest="400"
        HeightRequest="120"
        Stroke="{AppThemeBinding Light=Gray, Dark=#C8C8C8}"
        BackgroundColor="{AppThemeBinding Light=Gray, Dark=#C8C8C8}"
        StrokeShape="RoundRectangle 30">

        <Grid ColumnDefinitions="*,*">
            <Grid
            Margin="15,15,10,10"
            RowDefinitions="50,50">
                <Grid ColumnDefinitions="Auto, Auto">
                    <Label 
                    Text="{Binding Value}"
                    TextColor="{AppThemeBinding Light=White, Dark=Black}"
                    FontSize="Large"
                    Margin="5"
                    VerticalOptions="Center"
                    HorizontalOptions="StartAndExpand"
                    WidthRequest="155"
                    Grid.Column="1"
                    />
                </Grid>
                <Label
                    Grid.Row="1"
                    Grid.Column="1"
                    Text="{Binding TargetValue}"
                    TextColor="{AppThemeBinding Light=White, Dark=Black}"/>
            </Grid>
            <Border
            HeightRequest="100"
            WidthRequest="100"
            Stroke="{AppThemeBinding Light=Gray, Dark=#C8C8C8}"
            HorizontalOptions="End"
            Margin="10,0,20,0"
            Grid.Column="1">
                <Image />
            </Border>
        </Grid>
    </Border>
</ContentView>
