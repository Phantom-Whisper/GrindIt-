<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GrindIt_.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:GrindIt_.Views.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="GrindIt_">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate pages:Home}"
        Route="MainPage" />
    
    
    <!-- Annexe pages-->

    <ShellContent
        Title="Water"
        ContentTemplate="{DataTemplate pages:Water}"
        Route="Water"/>

    <ShellContent
        Title="Exercises"
        ContentTemplate="{DataTemplate pages:Exercises}"
        Route="Exercises"/>

    <ShellContent
        Title="Exercise"
        ContentTemplate="{DataTemplate pages:Exercise}"
        Route="Exercise"/>
    
    <ShellContent
        Title="Create exercise"
        ContentTemplate="{DataTemplate pages:CreateExercise}"
        Route="CreateExercice"/>

</Shell>
