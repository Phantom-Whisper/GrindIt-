<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GrindIt_.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:GrindIt_.Views.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="GrindIt_">

    <!-- Bottom Tab Bar -->
    <TabBar>
        <Tab Icon="home.png" Route="MainPage">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate pages:Home}"
                Route="MainPage" />
        </Tab>

        <Tab Icon="food.png" Route="NutritionPage">
            <ShellContent
                Title="Nutrition"
                ContentTemplate="{DataTemplate pages:NutritionPage}"
                Route="NutritionPage"/>
        </Tab>

        <Tab Icon="dumbbell.png" Route="WorkoutPage">
            <ShellContent
                Title="Workout"
                ContentTemplate="{DataTemplate pages:WorkoutPage}"
                Route="WorkoutPage"/>
        </Tab>

        <Tab Icon="account.png" Route="AccountPage">
            <ShellContent
                Title="Account"
                ContentTemplate="{DataTemplate pages:AccountPage}"
                Route="AccountPage"/>
        </Tab>
    </TabBar>

    <!-- Additional pages not in the Tab Bar -->
