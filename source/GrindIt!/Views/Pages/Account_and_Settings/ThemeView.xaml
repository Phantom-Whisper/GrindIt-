<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GrindIt_.Views.Pages.ThemeView"
             Title="ThemeView">
    <VerticalStackLayout>
        <ImageButton
            HorizontalOptions="Start"
            VerticalOptions="Start"
            Margin="10,0,20,0"
            HeightRequest="26"
            WidthRequest="26"
            Clicked="Return_Clicked">
            <ImageButton.Source>
                <FontImageSource
                    FontFamily="AwesomeSolid"
                    Glyph="ï“"
                    Size="30"
                    Color="{AppThemeBinding Light=Black, Dark=White}" />
            </ImageButton.Source>
        </ImageButton>
        <Label
            Text="Theme Preferences"
            Style="{StaticResource SubHeadline}"/>
        <Grid
            ColumnDefinitions="*,*"
            Margin="20,10,20,0">
            <Label
                Text="Dark mode"
                VerticalOptions="Center"
                HorizontalOptions="End"/>
            <Switch
                Grid.Column="1"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                Toggled="Switch_Toggled"/>
        </Grid>
        <Grid
            ColumnDefinitions="*,*"
            Margin="20,10,20,0">
            <Label
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Text="App banner"/>
            <ImageButton
                Grid.Column="1"
                HeightRequest="44"
                Source="gym_background.png"/>
        </Grid>
        <!--Add grid with all the colors you can use for the app theme-->
    </VerticalStackLayout>
</ContentPage>