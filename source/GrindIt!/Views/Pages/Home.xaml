<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:GrindIt_.Components"
             x:Class="GrindIt_.Views.Pages.Home"
             Title="">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            
            <Image 
                Source="{AppThemeBinding Light=logo.png, Dark=logo_white.png}"
                MaximumWidthRequest="200"
                MaximumHeightRequest="70"/>


            <!-- Bind a motivation quote here -->
            <Label
                Text="Motivation Quote"
                Style="{StaticResource SubHeadline}"/>

            <Button
                x:Name="CounterBtn"
                Text="Click me" 
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill" />
            <Button
                x:Name="TestLink"
                Text="Test view link"
                Clicked="TestLink_Clicked"
                />

            <local:Card>
                <local:Card.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnBorderTapped" />
                </local:Card.GestureRecognizers>
            </local:Card>

            <local:StepsCard>
                
            </local:StepsCard>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
