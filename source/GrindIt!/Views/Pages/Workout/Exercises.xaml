<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GrindIt_.Views.Pages.Exercises"
             Title="Exercises">
    <VerticalStackLayout>
        <Label 
            Text="GrindIt!"
            Style="{StaticResource SubHeadline}"
            VerticalOptions="Center" 
            HorizontalOptions="Center"/>

        <Grid
            ColumnDefinitions="*,*">
            <ImageButton
                HorizontalOptions="Start"
                VerticalOptions="Start"
                Margin="10,0,20,0"
                HeightRequest="26"
                WidthRequest="26"
                Clicked="Return_Clicked">
                <ImageButton.Source>
                    <FontImageSource
                        FontFamily="AwesomeSolid"
                        Glyph="ï“"
                        Size="30"
                        Color="{AppThemeBinding Light=Black, Dark=White}" />
                </ImageButton.Source>
            </ImageButton>
            <Button
                Grid.Column="1"
                Text="Create Exercise"
                Margin="0,0,20,20"
                HeightRequest="40"
                CornerRadius="30"
                HorizontalOptions="End"
                Clicked="Button_Clicked"/>
        </Grid>


        <SearchBar
            Placeholder="Name of the exercise"
            Margin="10,0,30,10"/>

        <!--List of all the targeted muscle and their exercise-->
        <Button
            Text="Exercise"
            Clicked="Exercise_Clicked"/>
    </VerticalStackLayout>
</ContentPage>