<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GrindIt_.Views.Pages.Exercise">
    
    <VerticalStackLayout>
        <Grid
            ColumnDefinitions="*,*">
            <ImageButton
                HorizontalOptions="Start"
                VerticalOptions="Start"
                Margin="10,0,20,0"
                HeightRequest="26"
                WidthRequest="26"
                Clicked="Return_Clicked">
                <ImageButton.Source>
                    <FontImageSource
                        FontFamily="AwesomeSolid"
                        Glyph=""
                        Size="30"
                        Color="{AppThemeBinding Light=Black, Dark=White}" />
                </ImageButton.Source>
            </ImageButton>
            <Button
                Grid.Column="1"
                Text="Transfer stats"
                HeightRequest="40"
                CornerRadius="30"
                WidthRequest="120"
                Margin="0,0,20,20"
                HorizontalOptions="End"/>
        </Grid>
        
        <!--Circle with a picture maybe?-->
        <!--or at least the first letter of the exercise name-->
        <Border
            HeightRequest="75"
            WidthRequest="75"
            StrokeThickness="2"
            HorizontalOptions="Start"
            Margin="20,0,0,10">
            <Border.StrokeShape>
                <Ellipse/>
            </Border.StrokeShape>
            <Image
                Source="gym_background.png"
                Aspect="AspectFill"/>
        </Border>
        <!--Will have to bind the name-->
        <Label
            Text="Exercise name"
            Margin="30,0,0,10"/>

        <Grid
            ColumnDefinitions="*,*"
            Margin="0,10,0,0">
            <!--Shows stats-->
            <Label
                Text="History"
                HorizontalOptions="Center"/>
            <Label
                Text="Stats"
                HorizontalOptions="Center"
                Grid.Column="1"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>